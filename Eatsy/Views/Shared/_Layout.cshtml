<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Eatsy - Food Budget Assistant</title>
    <link rel="stylesheet" href="~/Content/Styles/style.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="nav_bar">
        <div class="logo_nav">
            <img src="~/Content/SVG/Mockup_Logo.svg" alt="LOGO">
        </div>
        <div class="options">
            <a href="@Url.Action("Index", "Home")#hero-section">HOME</a>
